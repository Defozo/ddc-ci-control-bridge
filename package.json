{
  "name": "ddc-ci-control-bridge",
  "version": "1.0.2",
  "description": "Multi-protocol bridge for DDC/CI monitor control with MCP and MQTT support",
  "mcpName": "io.github.Defozo/ddc-ci-control-bridge",
  "main": "dist/server.js",
  "bin": {
    "ddc-ci-bridge": "./bin/ddc-mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "build:executables": "npm run build && pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output dist/bin/ddc-ci-bridge",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "lint": "echo 'No linter configured yet'",
    "test": "echo 'No tests configured yet'",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ddc-ci",
    "monitor-control",
    "mcp",
    "mqtt",
    "home-assistant",
    "openhab",
    "iot",
    "automation",
    "brightness",
    "vcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ddc-node/ddc-node": "^1.0.3",
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "fastmcp": "^3.20.0",
    "mqtt": "^5.14.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "pkg": "^5.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "pkg": {
    "assets": [
      "node_modules/@ddc-node/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist/bin"
  }
}
